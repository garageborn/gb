- content_for(:title, job_title + ' at Garage Born')

#job
  %main
    %h2= job_title

    .job_description= job_description

    %form{ action: '/apply', method: :post, enctype: 'multipart/form-data' }
      %input{ name: 'job', type: 'hidden', value: slug }
      %input{ name: 'trello_list', type: 'hidden', value: trello_list }

      .row
        %label{ for: 'name' } Nome:
        %input{ name: 'name', id: 'name', type: 'text', required: false }

      .row
        %label{ for: 'email' } Email:
        %input{ name: 'email', id: 'email', type: 'email', required: false }

      .row
        %label{ for: 'salary' } Pretens√£o salarial:
        %input{ name: 'salary', id: 'salary', type: 'number', required: false }

      .row
        %label{ for: 'file' } CV:
        %input{ name: 'file', type: 'file', id: 'file' }

      .row
        %button.button{ type: 'submit', name: 'action' } Enviar